{
  "name": "@microfrontends/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for microfrontends architecture",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/microfrontends-shared"
  },
  "keywords": [
    "typescript",
    "types",
    "shared",
    "microfrontends",
    "utilities"
  ],
  "scripts": {
    "build": "echo 'Development mode - using source files directly'",
    "dev": "echo 'Development mode - using source files directly'",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint . --max-warnings 0",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.44.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.3"
  }
